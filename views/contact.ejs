<%- include('partials/header',{title : "Contact Me" }); %>
  <% include partials/main_nav %>
    <main>
      <div class="container">
        <div class="shadow-lg m-3 bg-white rounded">
          <div class="row p-5">
            <div class="col-xs-12">
              <h3>Contact form</h3>
              <p>
                Use this form to send me a message. I will try to respond to your email as soon as possible.
              </p>
              <p>
                Alternatively, you may directly send me an email via: <a href="mailto:<%- contactInfo.email %>"><%- contactInfo.email %></a>
              </p>
              <form method="POST" action="/contact" enctype="application/x-www-form-urlencoded">
                <div class="mb-3">
                  <label for="email" class="form-label">Your email</label>
                  <input type="email" class="form-control" id="email" name="email" placeholder="name@example.com">
                </div>
                <div class="row mb-3">
                  <div class="col-md-6">
                    <label for="firstname" class="form-label">Your first name</label>
                    <input type="text" class="form-control" id="firstname" name="firstname">
                  </div>
                  <div class="col-md-6">
                    <label for="lastname" class="form-label">Your last name</label>
                    <input type="text" class="form-control" id="lastname" name="lastname">
                  </div>
                </div>
                <div class="mb-3">
                  <label for="message" class="form-label">Your message</label>
                  <textarea class="form-control" id="message" name="message" rows="6"></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </main>
    <% include partials/footer %>