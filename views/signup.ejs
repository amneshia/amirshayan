<%- include('partials/header',{title : "Sign up" }); %>
  <% include partials/main_nav %>
  <main>
    <div class="container">
      <div class="row p-5 justify-content-center">
        <div class="col-lg-4 shadow-lg bg-white rounded">
          <div class="p-3">
            <h3>Sign up</h3>
            <% const form = request.flash("form")[0] %>
              <form method="POST" action="/signup" enctype="application/x-www-form-urlencoded">
                <div class="mb-3">
                  <label for="username" class="form-label">Username</label>
                  <input type="username" class="form-control" id="username" name="username" value=<%- form ? (form.username ? form.username : "") : "" %>>
                </div>
                <div class="mb-3">
                  <label for="email" class="form-label">Email</label>
                  <input type="email" class="form-control" id="email" name="email" value=<%- form ? (form.email ? form.email : "") : "" %>>
                </div>
                <div class="mb-3">
                  <label for="password" class="form-label">Password</label>
                  <input type="password" class="form-control" id="password" name="password"></textarea>
                </div>
                <div class="mb-3">
                  <label for="password-confirmation" class="form-label">Retype password</label>
                  <input type="password" class="form-control" id="password-confirmation" name="password-confirmation"></textarea>
                </div>
                <div class="d-flex justify-content-center gap-2 d-block">
                  <button type="submit" class="btn btn-primary btn-block">Submit</button>
                </div>
              </form>
              <br>
              <p>
                Already have an account? Login <a href="/login">here</a>.
              </p>
            </div>
          </div>
        </div>
      </div>
    </main>
    <% include partials/footer %>